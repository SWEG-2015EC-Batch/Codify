#include <iostream>

using namespace std;

int main(){

    bool friends[5][5] = {{false, true, false, true, true},{true, false, true, false, true},
                          {false, true, false, false, false},{true, false, false, false, true},
                          {true, true, false, true, false}};

    cout << "    |   0   1   2   3   4   \n" ;
    cout << "----+-----------------------\n";

    for (int i = 0; i < 5; i++){
        cout<< i+1 <<"   |   ";
        for (int j = 0; j < 5; j++){
            /* if (friends[i][j] == true){
                cout << "*\t";
            }else{
                cout << " \t";
            } */
            friends[i][j] == true ? cout << "*   " : cout << "    ";
        }
        cout << '\n';
    }
 


    return 0;
    
}
